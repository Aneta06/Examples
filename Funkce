public class MethodsDemo {

    public static void main(String[] args) {
        printHello(); // 1. fce, slovo printHello mam z fce vytiskne Hello there!

        printNumber(10); // 2 . fce, slovo printNumber mam z fce vytiskne The number is 10

        int result = giveMeTen(); // 3 . fce, slovo result si vymyslim vytiskne 10
        System.out.println(result);


        int result2 = addThese(3, 5); //4. fce, slovo result2 si vymyslim,  vytiskne 8
        System.out.println(result2);

        System.out.println(addThese(3, 5)); // 4 .fce muzu vytisknout rovnou takhle a nemusim davat promennou
        //!!!!!!! ALE POZOR KDYZ ROVNOU TISKNU TAK SE MI HODNOTA NIKAM NEULOZI!!!!!!


    } // end Main

    //void, parameterlles method
    public static void printHello() { // 1. fce printHello je nazev fce kterej si vymyslim
        System.out.println("Hello there!"); // Hello there, si vymyslim jakej chci mit vystup
    } // end printHello

    // void parameterized
    public static void printNumber(int a) { // 2. fce printNumber je nazev fce, kterej si vymyslim ( pismeno a u int je nazev promenny)
        System.out.println("The number is " + a); //Vytiskne se pak The number is a clo kterz zadam nahore do promenny print number
    } // end printNumber

    // value-returning, parameterless
    public static int giveMeTen() { // 3. fce giveMeTen je nazev fce, kterej si vymyslim
        return 10; // vrati se mi 10, kdyz to nahore vytisknu
    } // end giveMe

    // value-returning, parameterized
    public static int addThese(int num1, int num2) { // 4. fce addThese je nazev fce co si vymyslim ( num1 a num2 jsou od int nazvy promenny ktery si vymyslim)
        return num1 + num2; // vrat
    } // end addThese

} //end printHello
